{
    "name": "GANESTRO",
    "n_gpu": 4,

    "generator": {
        "type": "Generator",
        "args": {
            "num_features": 16,
            "latent_dim": 100,
            "num_channels": 1,
            "n_layers": 6
        }
    },
    "discriminator": {
        "type": "Discriminator",
        "args": {
            "num_features": 16,
            "num_channels": 1,
            "n_layers": 6
        }
    },
    "data_loader": {
        "type": "NpzDataLoader",
        "args":{
            "data_dir": "/projects/data/HARPN/K9_synthetic/",
            "img_shape": [762, 762],
            "batch_size": 128,
            "shuffle": true,
            "num_workers": 2
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0002,
            "weight_decay": 0,
            "betas": [0.5, 0.999],
            "amsgrad": false
        }
    },
    "loss": "bce_loss",
    "metrics": [],
    "trainer": {
        "epochs": 10,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": ["off", "off"],
        "early_stop": 10,

        "tensorboard": true
    }
}